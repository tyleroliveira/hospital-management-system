        <input value="{{patient.country}}" class="form-input" id="country" name="country"></textarea>
      </div>
            <div class="form-group">
        <label for="insurance">insurance:</label>
        <input value="{{patient.insurance}}" class="form-input" id="insurance" name="insurance"></textarea>
      </div>
            <div class="form-group">
        <label for="username">username:</label>
        <input value="{{patient.username}}" class="form-input" id="username" name="username"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-outline-dark">Update</button>
      </div>
    </form>
  </div>


